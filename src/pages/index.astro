---
import SiteLayout from "../layouts/SiteLayout.astro";
import logo from "../assets/eesad-logo.png";
import { theme } from "../config/theme.js";

// IMPORTANT: on aligne la band/wave avec formation-integration
const { bandBackground, waveFill, glowColor } = theme.colors;

const cards = [
  {
    title: "Sauvegarde Microsoft 365",
    desc: "Protection complète des courriels, fichiers et Teams.",
    link: "/sauvegarde365",
    icon: `
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
        d="M12 16.5v-9m0 9l-3-3m3 3l3-3m-.75-6.75a4.5 4.5 0
            00-8.456 1.09A3.75 3.75 0 006
            13.5h12a3.75 3.75 0 00.206-7.464A4.501 4.501 0
            0012.75 6.75z" />
    `,
  },
  {
    title: "Gestion TI proactive",
    desc: "Supervision 24/7, protection avancée et support rapide pour assurer la stabilité, la sécurité et réduire les coûts.",
    link: "/rmm-edr-kaseya365",
    icon: `
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
        d="M12 3l7 3.5v5.5c0 4.5-3 8.5-7 9.5-4-1-7-5-7-9.5V6.5L12 3z
           M12 11a2 2 0 110 4 2 2 0 010-4z" />
    `,
  },
  {
    title: "Guide pratique employé",
    desc: "Bonnes pratiques numériques : simple, clair, prêt à diffuser.",
    link: "/guide-employe",
    icon: `
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
        d="M3.75 4.5L12 8.25l8.25-3.75v12.75L12 21.75l-8.25-3.75V4.5z" />
    `,
  },
  {
    title: "Service conseil TI",
    desc: "Vérification de soumissions, consultation et recommandations (sans interventions).",
    link: "/service-conseil",
    icon: `
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
        d="M11.25 3.75a7.5 7.5 0 105.303 12.803l3.697 3.697M8.25 11.25h6" />
    `,
  },
  {
    title: "Formations & intégration",
    desc: "Onboarding nouveaux employés + formations Microsoft 365 & cybersécurité.",
    link: "/formation-integration",
    icon: `
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
        d="M12 3l9 4.5-9 4.5-9-4.5L12 3zm7.5 7.5V15c0 1.657-3.357 3-7.5 3s-7.5-1.343-7.5-3v-4.5" />
    `,
  },
];
---

<SiteLayout title="Services TI – EÉSAD">

  <!-- HEADER SLOT -->
  <div slot="header" class="flex flex-col items-center">
    <img src={logo.src} alt="EÉSAD" class="h-20 w-auto" />
    <h1 class="mt-2 text-xs tracking-[0.35em] text-slate-400 uppercase">
      Services TI
    </h1>
  </div>

  <!-- HERO SLOT -->
  <div slot="hero" class="relative mx-auto max-w-4xl text-center z-20 pointer-events-auto">
    <div class="absolute pointer-events-none left-1/2 top-10 -translate-x-1/2 w-[70%] md:w-[55%] h-24 bg-sky-400/20 blur-[80px] opacity-80"></div>

    <p class="text-xs uppercase tracking-[0.35em] text-slate-400">
      Sécurité • Modernisation • Support
    </p>

    <h2 class="mt-3 text-4xl md:text-5xl font-semibold tracking-tight text-slate-100">
      Un écosystème TI stable, sécurisé et simple à gérer
    </h2>

    <p class="mt-4 text-base md:text-lg text-slate-300 leading-relaxed">
      Découvrez nos services et ressources pour protéger Microsoft 365, renforcer la posture de sécurité
      et structurer une gestion TI proactive.
    </p>
    <!--  
    <div class="mt-6 flex flex-wrap justify-center gap-3">
      <a
        href="/survey"
        class="inline-flex items-center px-5 py-2.5 rounded-xl font-semibold
               bg-gradient-to-r from-sky-400 to-indigo-400 text-slate-900
               hover:brightness-110 transition
               focus:outline-none focus:ring-2 focus:ring-sky-300/70"
      >
        Audit Express
      </a>

      <a
        href="#services"
        class="inline-flex items-center px-5 py-2.5 rounded-xl font-semibold
               bg-slate-800/50 border border-slate-700 text-slate-200
               hover:bg-slate-800 hover:border-sky-400/60 transition
               focus:outline-none focus:ring-2 focus:ring-sky-300/40"
      >
        Explorer les services
      </a>
    </div>-->
  </div>

  <main class="mt-1">

    <!-- WAVE + CONTENT BAND -->
    <section class="relative w-full overflow-hidden -mt-20" style={`background-color: ${bandBackground};`}>

      <!-- glows/overlays  -->
      <div class="pointer-events-none absolute top-40 left-0 right-0 mx-auto w-[90%] h-40 bg-sky-500/10 blur-3xl z-0"></div>
      <div class="pointer-events-none absolute inset-0 bg-gradient-to-b from-transparent to-slate-950/40 z-[1]"></div>

      <svg
        viewBox="0 0 1440 320"
        preserveAspectRatio="none"
        class="pointer-events-none absolute top-0 left-0 w-full h-96 z-[2]"
        style={`color: ${waveFill};`}
        aria-hidden="true"
      >
        <path fill="currentColor" d="M0,220 C240,140 480,300 720,220 C960,140 1200,300 1440,220 L1440,0 L0,0 Z" />
      </svg>

      <div class="pointer-events-none absolute top-40 left-0 right-0 mx-auto w-[90%] h-40 blur-3xl z-0" style={`background-color: ${glowColor};`}></div>

      <!-- contenu -->
      <div class="relative z-[3] mx-auto max-w-6xl px-4 pb-20 mt-28">

        <!-- SERVICES TITLE -->
        <div id="services" class="text-center">
          <h4 class="text-sm uppercase tracking-[0.35em] text-slate-400">
            Services offerts et ressources
          </h4>
          <p class="mt-3 text-slate-300 text-sm md:text-base">
            Choisissez un volet pour en savoir plus — chaque page contient une description claire et une demande de soumission.
          </p>
        </div>

        <div class="mt-10 grid gap-8 md:grid-cols-3 items-stretch">

          <!-- PROMO (3 colonnes) 
          <a
            href="/promo-30h"
            class="group relative overflow-hidden rounded-2xl md:col-span-3
                   border border-white/10 bg-slate-900/60 backdrop-blur
                   p-8 md:p-10 shadow-[0_10px_40px_rgba(0,0,0,0.35)]
                   transition-all duration-300 hover:-translate-y-1 hover:border-sky-400/40"
          >
            <div class="pointer-events-none absolute inset-0 bg-cover bg-center"
              style="background-image:url('/images/promo-network.jpg')"></div>
              
              

            <div class="pointer-events-none absolute inset-0 bg-gradient-to-r from-slate-950/85 via-slate-950/60 to-slate-950/85"></div>
            <div class="pointer-events-none absolute inset-0 bg-gradient-to-b from-slate-950/20 to-slate-950/70"></div>

            <div class="pointer-events-none absolute -top-24 -right-24 h-72 w-72 rounded-full bg-sky-400/10 blur-3xl opacity-0 group-hover:opacity-100 transition"></div>

            <div class="relative flex flex-col md:flex-row md:items-center md:justify-between gap-6">
              <div class="max-w-3xl">
                <p class="text-xs uppercase tracking-[0.35em] text-slate-300/90">
                  Offre limitée
                </p>

                <h3 class="mt-2 text-2xl md:text-3xl font-extrabold text-slate-100">
                  Réservez votre banque de <span class="text-sky-300">30h</span> avec <span class="text-sky-300">50% de rabais</span>
                </h3>

                <p class="mt-3 text-slate-200/90 text-sm md:text-base leading-relaxed">
                  Support technique rapide, meilleure stabilité, et planification simplifiée — une formule claire et prévisible.
                </p>

                <div class="mt-5 flex flex-wrap items-center gap-2">
                  {["Banque : 30h", "Rabais : 50%", "Support remote"].map((t) => (
                    <span class="inline-flex items-center rounded-full bg-white/10 border border-white/10 px-3 py-1 text-xs text-slate-100">
                      {t}
                    </span>
                  ))}
                </div>
              </div>

              <div class="shrink-0">
                <span
                  class="inline-flex items-center justify-center rounded-xl px-6 py-3 font-semibold
                         bg-gradient-to-r from-sky-400 to-indigo-400 text-slate-900
                         group-hover:brightness-110 transition"
                >
                  Voir l’offre →
                </span>
              </div>
            </div>
          </a>-->

          <!-- FORMATION – bannière avec formateur intégré -->
          <a
            href="/formation-integration"
            class="group relative overflow-hidden rounded-2xl md:col-span-3
                  border border-white/10 bg-slate-900/60 backdrop-blur
                  p-6 pb-[240px] md:p-10 md:pr-[22rem]
                  shadow-[0_10px_40px_rgba(0,0,0,0.35)]
                  transition-all duration-300 hover:-translate-y-1 hover:border-sky-400/40"
          >
            <!-- glow décoratif -->
            <div class="pointer-events-none absolute -top-24 -right-24 h-72 w-72 rounded-full bg-sky-400/10 blur-3xl opacity-60"></div>

            <!-- CONTENU TEXTE -->
            <div class="relative z-[3] max-w-3xl">
              <p class="text-xs uppercase tracking-[0.35em] text-slate-300/90">
                Formations & intégration
              </p>

              <h3 class="mt-2 text-2xl md:text-3xl font-extrabold text-slate-100">
                Formations Microsoft 365 & cybersécurité
                <span class="text-sky-300"> animées par Miguel</span>
              </h3>

              <p class="mt-3 text-slate-200/90 text-sm md:text-base leading-relaxed">
                Intégration des nouveaux employés, bonnes pratiques M365, prévention des incidents
                et accompagnement concret adapté à votre réalité.
              </p>

              <div class="mt-5 flex flex-wrap items-center gap-2">
                {["Onboarding", "Microsoft 365", "Cybersécurité", "Approche pratique"].map((t) => (
                  <span class="inline-flex items-center rounded-full bg-white/10 border border-white/10 px-3 py-1 text-xs text-slate-100">
                    {t}
                  </span>
                ))}
              </div>

              <div class="mt-6">
                <span
                  class="inline-flex items-center justify-center rounded-xl px-6 py-3 font-semibold
                        bg-gradient-to-r from-sky-400 to-indigo-400 text-slate-900
                        group-hover:brightness-110 transition"
                >
                  Découvrir les formations →
                </span>
              </div>
            </div>

          <!-- PHOTO MIGUEL – collée au bas (mobile + desktop) -->
          <div
            class="
              pointer-events-none
              absolute
              bottom-0
              right-6
              md:right-10
              z-[2]
            "
          >
            <!-- halo doux -->
            <div class="absolute -inset-10 rounded-full bg-sky-400/10 blur-3xl opacity-70"></div>

            <img
              src="/images/miguel.png"
              alt="Miguel – formateur"
              loading="lazy"
              class="
                relative
                h-[200px] sm:h-[220px] md:h-[320px]
                w-auto
                object-contain
                drop-shadow-[0_25px_40px_rgba(0,0,0,0.45)]
                [mask-image:linear-gradient(to_top,black_85%,transparent_100%)]
              "
            />
          </div>
          </a>

          <!-- SÉCURITÉ -->
          <a
            href="/securite365"
            class="group relative overflow-hidden rounded-2xl h-full
                   border border-white/10 bg-slate-900/55 backdrop-blur
                   p-6 shadow-[0_10px_30px_rgba(0,0,0,0.25)]
                   transition-all duration-300 hover:-translate-y-1 hover:border-sky-400/40"
          >
            <div class="pointer-events-none absolute inset-0 opacity-0 group-hover:opacity-100 transition
                        bg-gradient-to-br from-sky-500/10 via-transparent to-indigo-500/10"></div>

            <div class="relative flex min-h-[180px] flex-col justify-between">
              <div class="flex items-start gap-3">
                <div class="mt-1 flex h-11 w-11 items-center justify-center rounded-xl bg-white/5 border border-white/10">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-sky-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                      d="M9 12.75L11.25 15 15 9.75m-3-6.042a48.42 48.42 0 00-6 2.558A2.25
                         2.25 0 005.25 8.91v4.819a6.75 6.75 0 003.022 5.625l3.095
                         2.06a.75.75 0 00.816 0l3.095-2.06a6.75 6.75 0 003.022-5.625V8.91a2.25
                         2.25 0 00-1.25-2.132 48.42 48.42 0 00-6-2.558z" />
                  </svg>
                </div>
                <div>
                  <h4 class="text-xl font-semibold text-slate-100">Sécurité Microsoft 365</h4>
                  <p class="mt-2 text-sm text-slate-300">
                    Cybersécurité, bonnes pratiques et posture de sécurité M365.
                  </p>
                </div>
              </div>

              <span class="mt-4 inline-flex items-center text-sm font-semibold text-sky-300 group-hover:text-sky-200">
                Voir la page →
              </span>
            </div>
          </a>

          <!-- AUTRES CARTES -->
          {cards.map((s) => (
            <a
              href={s.link}
              class="group relative overflow-hidden rounded-2xl h-full
                     border border-white/10 bg-slate-800/55 backdrop-blur
                     p-6 shadow-[0_10px_30px_rgba(0,0,0,0.25)]
                     transition-all duration-300 hover:-translate-y-1 hover:border-sky-400/40"
            >
              <div class="pointer-events-none absolute inset-0 opacity-0 group-hover:opacity-100 transition
                          bg-gradient-to-br from-sky-500/10 via-transparent to-indigo-500/10"></div>

              <div class="relative flex min-h-[180px] flex-col justify-between">
                <div class="flex items-start gap-3">
                  <div class="mt-1 flex h-11 w-11 items-center justify-center rounded-xl bg-white/5 border border-white/10">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-sky-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" set:html={s.icon}></svg>
                  </div>

                  <div>
                    <h4 class="text-xl font-semibold text-slate-100">{s.title}</h4>
                    <p class="mt-2 text-sm text-slate-300">{s.desc}</p>
                  </div>
                </div>

                <span class="mt-4 inline-flex items-center text-sm font-semibold text-sky-300 group-hover:text-sky-200">
                  Voir la page →
                </span>
              </div>
            </a>
          ))}

          <!-- QUESTIONNAIRE (bannière compacte) -->
          <a
            href="/survey"
            class="group relative overflow-hidden rounded-2xl md:col-span-3
                   border border-blue-500/30 bg-blue-600/25 backdrop-blur
                   px-6 py-4 shadow-[0_10px_30px_rgba(0,0,0,0.20)]
                   transition-all duration-300 hover:-translate-y-1 hover:border-blue-400/50"
          >
            <div class="pointer-events-none absolute inset-0 opacity-0 group-hover:opacity-100 transition
                        bg-gradient-to-r from-blue-400/15 via-white/5 to-indigo-400/15"></div>

            <div class="relative flex flex-col md:flex-row md:items-center md:justify-between gap-3">
              <div>
                <p class="text-xs uppercase tracking-[0.35em] text-blue-100/70">Ressource</p>
                <h4 class="mt-1 text-lg font-semibold text-white">Questionnaire TI</h4>
                <p class="mt-1 text-sm text-blue-50/85">
                  Dressez un portrait rapide de votre environnement pour mieux cibler les recommandations.
                </p>
              </div>

              <span class="shrink-0 inline-flex items-center text-sm font-semibold text-white">
                Remplir le questionnaire →
              </span>
            </div>
          </a>

        </div>
      </div>
    </section>
  </main>
</SiteLayout>
