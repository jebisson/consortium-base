---
import "../styles/global.css";

const { title = "Services TI – EÉSAD" } = Astro.props;
---

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <!-- Cloudflare Web Analytics -->
    <script
      defer
      src="https://static.cloudflareinsights.com/beacon.min.js"
      data-cf-beacon='{"token": "YOUR_CLOUDFLARE_TOKEN_HERE"}'>
    </script>
    <!-- End Cloudflare Web Analytics -->
  </head>

  <body class="min-h-screen bg-slate-950 text-slate-100">
    <div class="min-h-screen flex flex-col">

      <!-- HEADER (logo + small title) -->
      <header class="pt-12 pb-8 text-center relative">
        <div class="relative mx-auto flex flex-col items-center gap-3 z-10">
          <slot name="header" />
        </div>
      </header>

      <!-- HERO (big title + intro) -->
      <section class="mx-auto max-w-4xl px-4 text-center relative z-10">
        <slot name="hero" />
      </section>

      <!-- PAGE CONTENT (each page keeps its own wave / main / sections) -->
      <div class="flex-1">
        <slot />
      </div>

      <!-- FOOTER (same on all pages) -->
      <footer class="mt-auto border-t border-slate-800 relative">
        <div
          class="absolute inset-x-0 -top-px h-[2px]
                 bg-gradient-to-r from-transparent via-blue-400/40 to-transparent">
        </div>

        <div class="mx-auto max-w-6xl px-4 py-6 text-xs text-slate-500">
          © {new Date().getFullYear()} — Services TI · EÉSAD
        </div>
      </footer>

    </div>
  </body>
</html>
